    </div>
      </div>
</section>

<div class="container">
  <section class="knowledge-base">
    <section class="categories blocks">
      <ul class="blocks-list">
          {{#if settings.show_custom_box_1}}
            <li class="blocks-item">
              <a href="{{settings.show_custom_box_1_link}}" class="blocks-item-link">
                <div class="cat-image-div">
                    <img src="{{settings.custom_box_1_image}}" class="cat-img">
                  </div>
                <div class="bg-div">
                  <div class="cat-img-text-div">
                    <span class="blocks-item-title">
                      {{settings.custom_box_1_heading}}
                    </span>
                  </div>
                {{#isnt settings.first_custom_block_description 'HIDE_ME'}}
                  <span class="blocks-item-description">
