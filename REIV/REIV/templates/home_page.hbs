<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<section id="main-content" class="section hero">
  <div class="hero-inner ">
        <div class="welcome-message-wrapper">
      <h1 class="welcome-message">
      {{settings.welcome_message1}}
      </h1>
          <h1 class="welcome-message1">
      {{settings.welcome_message2}}
      </h1>
    </div>
    <h2 class="visibility-hidden ">{{ t 'search' }}</h2>
      <path stroke="currentColor" stroke-linecap="round" d="M11 11L7.5 7.5"/>
    
    {{search submit=true instant=settings.instant_search class='search search-full' placeholder="Search IT knowledgebase...."}}


      <div class="popular-search hero-inner">
      <p>{{'Popular Searches :'}}</p>
        <div class="popular-search-el">
          <div class="search-items">
          <a href="{{settings.welcome_section_1_url}}">{{settings.welcome_section_links_1}}</a>
          </div>
          <div class="search-items">
          <a href="{{settings.welcome_section_2_url}}">{{settings.welcome_section_links_2}}</a>
