              {{#is settings.custom_box_font_icon_2 'NONE'}}
                <img src="{{settings.second_custom_block_icon}}">
              {{else}}
                <i class="{{settings.custom_box_font_icon_2}}"></i>
              {{/is}}
            </span>
            <span class="blocks-item-title">
              {{settings.second_custom_block_title}}
            </span>
            {{#isnt settings.second_custom_block_desc 'HIDE_ME'}}
              <span class="blocks-item-description">
                {{settings.second_custom_block_desc}} 
              </span>
            {{/isnt}}
          </a>
        </li>
        {{/is}}

        {{#is settings.third_custom_block_visibility true}}
        <li class="blocks-item blocks_custom">
          <a href='{{settings.third_custom_block_url}}' class="blocks-item-link">
            <span class="icons_wrapper">
              {{#is settings.custom_box_font_icon_3 'NONE'}}
                <img src="{{settings.third_custom_block_icon}}">
              {{else}}
                <i class="{{settings.custom_box_font_icon_3}}"></i>
              {{/is}}
            </span>
            <span class="blocks-item-title">
              {{settings.third_custom_block_title}}
            </span>
            {{#isnt settings.third_custom_block_desc 'HIDE_ME'}}
            <span class="blocks-item-description">
              {{settings.third_custom_block_desc}}
            </span>
            {{/isnt}}
          </a>
        </li>
        {{/is}}
          </div>
      </section>
