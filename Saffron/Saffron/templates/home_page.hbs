<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<section id="main-content" class="section hero {{#is settings.hero_image_display true}} hero-image{{/is}} full-hero">
  <div class="hero-inner">
    <div class="welcome-message-wrapper">
      <h1 class="welcome-message">
        {{settings.welcome_message}}
      </h1>
    </div>

    <h2 class="visibility-hidden">{{ t 'search' }}</h2>
    {{search  instant=settings.instant_search class='search search-full' placeholder="Type your question here.."}}
  </div>
</section>
<section class="top-wrapper">
<div class="container ">
    <section class="section knowledge-base">
      <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
      <section class="categories blocks">
        <ul class="blocks-list">
      {{#is settings.custom_block_visibility true}}
        {{#is settings.first_custom_block_visibility true}}
        <li class="blocks-item blocks_custom">
          <a href='{{settings.first_custom_block_url}}' class="blocks-item-link">
            <span class="icons_wrapper">
              {{#is settings.custom_box_font_icon_1 'NONE'}}
                <img src="{{settings.first_custom_block_icon}}">
              {{else}}
                <i class="{{settings.custom_box_font_icon_1}}"></i>
              {{/is}}
            </span>
            <span class="blocks-item-title">
              {{settings.first_custom_block_title}}
            </span>
            {{#isnt settings.first_custom_block_description 'HIDE_ME'}}
              <span class="blocks-item-description">
                {{settings.first_custom_block_description}}
              </span>
            {{/isnt}}
          </a>
        </li>
        {{/is}}

        {{#is settings.second_custom_block_visibility true}}
        <li class="blocks-item blocks_custom">
          <a href='{{settings.second_custom_block_url}}' class="blocks-item-link">
