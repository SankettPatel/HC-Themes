<h1 class="visibility-hidden">{{ help_center.name }}</h1>
<section class="details-con">
  <div class="container">
    
            <div class="top-boxes-sec">
            <ul class="top-boxes">
              	<li><a href="{{settings.top_custom_box_1_url}}">{{settings.top_custom_box_1}}</a></li>
              	<li><a href="{{settings.top_custom_box_2_url}}">{{settings.top_custom_box_2}}</a></li>
              	<li><a href="{{settings.top_custom_box_3_url}}">{{settings.top_custom_box_3}}</a></li>
              	<li><a href="{{settings.top_custom_box_4_url}}">{{settings.top_custom_box_4}}</a></li>
            </ul>
        </div>   
    
    <div class="welcome-message-wrapper">
      <h1 class="welcome-message">
        {{settings.welcome_message}}
      </h1>
    </div>
    <div class="sec-det-div">
      <div class="sec-det-dev-3">
        <div class="custom-main-box">
        {{#is settings.custom_block_visibility true}}
          {{#if settings.custom_box_1}}
            <a href="{{settings.custom_box_link_1}}" class="custom-article-anc">
              {{#isnt settings.custom_box_heading_text_1 ''}}
                {{#is settings.custom_box_font_icon_1 'NONE'}}
                  <img src="{{settings.custom_box_icon_1}}" alt="document icon" class="topics-doc-icon">
                {{else}}
                  <i class="{{settings.custom_box_font_icon_1}}"></i>
                {{/is}}
                <div class="custom-inner-div {{#isnt settings.custom_box_font_icon_1 ''}} ma-rt-10 {{/isnt}}">
                  {{#isnt settings.custom_box_heading_text_1 ''}}
                    <h3 class="custom-inner-heading">
                      {{settings.custom_box_heading_text_1}}
                    </h3>
                  {{/isnt}}
                  {{#isnt settings.custom_box_content_text_1 ''}}
                    <p class="custom-desc">
                      {{settings.custom_box_content_text_1}}
                    </p>
                  {{/isnt}}
                </div>
              {{/isnt}}
            </a>
          {{/if}}

          {{#if settings.custom_box_2}}
            <a href="{{settings.custom_box_link_2}}" class="custom-article-anc">
              {{#isnt settings.custom_box_heading_text_2 ''}}
                {{#is settings.custom_box_font_icon_2 'NONE'}}
                  <img src="{{settings.custom_box_icon_2}}" alt="document icon" class="topics-doc-icon">
                {{else}}
                  <i class="{{settings.custom_box_font_icon_2}}"></i>
                {{/is}}
                <div class="custom-inner-div {{#isnt settings.custom_box_font_icon_2 ''}} ma-rt-10 {{/isnt}}">
                  {{#isnt settings.custom_box_heading_text_2 ''}}
                    <h3 class="custom-inner-heading">
                      {{settings.custom_box_heading_text_2}}
                    </h3>
                  {{/isnt}}
                  {{#isnt settings.custom_box_content_text_2 ''}}
                    <p class="custom-desc">
                      {{settings.custom_box_content_text_2}}
                    </p>
                  {{/isnt}}
                </div>
              {{/isnt}}
            </a>
          {{/if}}

          {{#if settings.custom_box_3}}
            <a href="{{settings.custom_box_link_3}}" class="custom-article-anc">
              {{#isnt settings.custom_box_heading_text_3 ''}}
                {{#is settings.custom_box_font_icon_3 'NONE'}}
                  <img src="{{settings.custom_box_icon_3}}" alt="document icon" class="topics-doc-icon">
                {{else}}
                  <i class="{{settings.custom_box_font_icon_3}}"></i>
                {{/is}}
                <div class="custom-inner-div {{#isnt settings.custom_box_font_icon_3 ''}} ma-rt-10 {{/isnt}}">
                  {{#isnt settings.custom_box_heading_text_3 ''}}
                    <h3 class="custom-inner-heading">
                      {{settings.custom_box_heading_text_3}}
                    </h3>
                  {{/isnt}}
                  {{#isnt settings.custom_box_content_text_3 ''}}
                    <p class="custom-desc">
                      {{settings.custom_box_content_text_3}}
                    </p>
                  {{/isnt}}
                </div>
              {{/isnt}}
            </a>
          {{/if}}

          {{#if settings.custom_box_4}}
            <a href="{{settings.custom_box_link_4}}" class="custom-article-anc">
              {{#isnt settings.custom_box_heading_text_4 ''}}
                {{#is settings.custom_box_font_icon_4 'NONE'}}
                  <img src="{{settings.custom_box_icon_4}}" alt="document icon" class="topics-doc-icon">
                {{else}}
                  <i class="{{settings.custom_box_font_icon_4}}"></i>
                {{/is}}
                <div class="custom-inner-div {{#isnt settings.custom_box_font_icon_4 ''}} ma-rt-10 {{/isnt}}">                  
                  {{#isnt settings.custom_box_heading_text_4 ''}}
                    <h3 class="custom-inner-heading">
                      {{settings.custom_box_heading_text_4}}
                    </h3>
                  {{/isnt}}
                  {{#isnt settings.custom_box_content_text_4 ''}}
                    <p class="custom-desc">
                      {{settings.custom_box_content_text_4}}
                    </p>
                  {{/isnt}}
                </div>
              {{/isnt}}
            </a>
          {{/if}}
        {{/is}}

      {{#is settings.category_block_visibility true}}
        {{#each categories}}
        {{#if ../has_multiple_categories}}
        <li class="blocks-item blocks_category custom-article-anc" data-title="{{id}}">
          <a href='{{url}}' class="blocks-item-link">
            <div class="cat-image-div hide">
              <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=" alt="icon" class="{{id}}-block-icon block-icon cat-img">
              <script>setIcon({{id}});</script>
            </div>
            <div class="category-block-content">
              <span class="blocks-item-title">{{name}}</span>
              <span class="blocks-item-description">{{excerpt description}}</span>
            </div>
          </a>
        </li>
        {{else}}
        {{#each sections}}
        <li class="blocks-item custom-article-anc">
          <a href='{{url}}' class="blocks-item-link">
            <div class="cat-image-div hide">
              <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=" alt="icon" class="{{id}}-block-icon block-icon cat-img">
              <script>setIcon({{id}});</script>
            </div>
            <div class="category-block-content">
              <span class="blocks-item-title">{{name}}</span>
              <span class="blocks-item-description">{{excerpt description}}</span>
            </div>
          </a>
        </li>
        {{/each}}
        {{/if}}
        {{/each}}
      {{/is}}

        </div>

      </div>
     
      {{#is settings.show_promoted_article true}}
        {{#if promoted_articles}}
          <div class="sec-det-div-2">
            <p class="details-2-heading">
              {{t 'promoted_articles'}}
            </p>
            <div class="topics-wrap">
              {{#each promoted_articles}}
                <div class="topics-in">
                  <a href="{{url}}" class="topics-in-anc">
                    <p class="topics-in-head">
                      {{#if internal}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                          <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
                          <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5"/>
                        </svg>
                      {{/if}}
                      {{title}}
                    </p>
                  </a>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
      {{/is}}
    </div>
  </div>
</section>


{{#is settings.kb_tree_visibility true}}
<div class="container sec-con">
  <section class="knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      {{#each categories}}
      	<div class="cat-blocks-div">
          <h2>{{name}}</h2>
            <ul class="blocks-list">
              {{#each sections}}
                {{#each articles}}
                  <li class="blocks-item">
                    <a href='{{url}}' class="blocks-item-link">
                      <span class="blocks-item-title">
                        {{title}}
                      </span>
                    </a>
                  </li>
                {{/each}}
              {{/each}}
            </ul>
            <a href='{{url}}' class="see-all-anc">
              {{t "see_all"}}
            </a>
        	</div>
        {{/each}}
      {{pagination}}
    </section>
  </section>
</div>
{{/is}}


